<?xml version="1.0"?>
<block>
  <name>Peak Detector</name>
  <key>dpd_peak_detect</key>
  <category>[dpd]</category>
  <import>import dpd</import>
  <make>dpd.peak_detect($peak_cond)</make>

  <param>
    <name>Threshold</name>
    <key>peak_cond</key>
    <type>int</type>
  </param>

  <sink>
    <name>in1</name>
    <type>complex</type>
  </sink>
  <sink>
    <name>in2</name>
    <type>complex</type>
  </sink>

  <source>
    <name>out</name>
    <type>complex</type>
  </source>
</block>
