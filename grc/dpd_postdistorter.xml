<?xml version="1.0"?>
<block>
  <name>Postdistorter</name>
  <key>dpd_postdistorter</key>
  <category>[dpd]</category>
  <import>import dpd</import>
  <make>dpd.postdistorter($dpd_params, $save_log)</make>

  <param>
    <name>DPD Parameters</name>
    <key>dpd_params</key>
    <value>(0,0,0,0,0)</value>
    <type>raw</type>
  </param>
  <param>
    <name>Save log file?</name>
    <key>save_log</key>
    <value>0</value>
    <type>enum</type>
    <option>
      <name>Yes</name>
      <key>1</key>
    </option>
    <option>
      <name>No</name>
      <key>0</key>
    </option>
  </param> 
  
  <sink>
    <name>PA_input</name>
    <type>message</type>
  </sink>

  <sink>
    <name>in</name>
    <type>complex</type>    
  </sink>

  <source>
    <name>taps</name>
    <type>message</type>
  </source>
</block>
