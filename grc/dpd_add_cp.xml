<?xml version="1.0"?>
<block>
  <name>add_cp</name>
  <key>dpd_add_cp</key>
  <category>[dpd]</category>
  <import>import dpd</import>
  <make>dpd.add_cp($NFFT, $cp_len)</make>
  
  <param>
    <name>FFT Size</name>
    <key>NFFT</key>
    <type>int</type>
  </param>
  <param>
    <name>Cyclic Prefix Length</name>
    <key>cp_len</key>
    <type>int</type>
  </param>


  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>$NFFT</vlen>
  </sink>


  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$NFFT+$cp_len</vlen>
  </source>

</block>
